<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customborder"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/spacing_medium">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="9dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_xmlarge"
            android:layout_weight="1"
            app:srcCompat="@drawable/housing" />



        <ImageButton
            android:id="@+id/bt_close"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="@dimen/spacing_middle"
            android:background="@android:drawable/screen_background_light_transparent"
            android:tint="@color/grey_1000"
            app:srcCompat="@drawable/ic_close" />

    </LinearLayout>


    <TextView
        android:id="@+id/call_stat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:gravity="center"
        android:padding="@dimen/spacing_medium"
        android:text="Message From"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/grey_800"
        android:textSize="14sp"
        android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/profile_section"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:minHeight="120dp"
            android:orientation="horizontal">


            <!--<ImageView-->
            <!--android:id="@+id/image"-->
            <!--android:layout_width="90dp"-->
            <!--android:layout_height="90dp"-->
            <!--android:src="@drawable/photo_male_2" />-->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="85dp"
                android:layout_height="76dp"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:src="@drawable/photo_male_2"
                app:civ_border_color="@color/overlay_dark_10"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:layout_width="241dp"
                android:layout_height="100dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="251dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_mlarge"
                        android:text="Vishal"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/grey_90"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/image_verified"
                        android:layout_width="15dp"
                        android:layout_height="22dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/verified" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/bt_open"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="@dimen/spacing_mlarge"
                        android:gravity="end"
                        android:padding="@dimen/spacing_small"
                        android:text="+1 205 782 0998"
                        android:textAlignment="viewEnd"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/grey_90"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                </LinearLayout>


                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:text="Customer"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_800"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/cvc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_1000"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="128dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/star_rating_5_of_5" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="100dp"
            android:orientation="vertical"
            android:padding="@dimen/spacing_small">

            <!--<ImageView-->
            <!--android:id="@+id/image"-->
            <!--android:layout_width="90dp"-->
            <!--android:layout_height="90dp"-->
            <!--android:src="@drawable/photo_male_2" />-->

            <!--<TextView-->
            <!--android:id="@+id/messageView"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/spacing_middle"-->
            <!--android:layout_marginTop="@dimen/spacing_medium"-->
            <!--android:layout_marginRight="@dimen/spacing_middle"-->
            <!--android:text="Message"-->
            <!--android:textAlignment="center"-->
            <!--android:textAppearance="@style/TextAppearance.AppCompat.Subhead"-->
            <!--android:textColor="@color/grey_20" />-->

            <TextView
                android:id="@+id/caller_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:gravity="start"
                android:text="Following call intent was sent to customer"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_1000"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/messageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:background="@color/grey_100"
                android:gravity="top"
                android:lines="2"
                android:padding="@dimen/spacing_middle"
                android:text="Hello Ardian, I am calling you to resolve your query of our IndhiHome smart installtion"
                android:textColor="@color/blue_grey_800"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:gravity="start"
                android:text="Your Reply"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_1000"
                android:textSize="14sp"
                android:textStyle="italic"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/messageTypeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginRight="30dp"
                    android:background="@color/grey_100"
                    android:gravity="top"
                    android:hint="Type your message here"
                    android:lines="1"
                    android:padding="@dimen/spacing_middle"
                    android:text=""
                    android:textColor="@color/blue_grey_800"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/bt_send"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/spacing_mxlarge"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:tint="@color/pink_A200"
                    app:srcCompat="@drawable/ic_send_black_24dp" />

            </RelativeLayout>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/cta_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:background="@color/grey_100"
        android:gravity="center|center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_middle"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/bt_callback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/sms" />

            <TextView
                android:id="@+id/bt_callback_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bt_callback"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:text="SMS"
                android:textColor="@color/pink_A400"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_medium"
            android:gravity="right"
            android:text="Powered by Ringlerr"
            android:textColor="@color/light_green_700"
            android:textSize="10sp" />

</LinearLayout>

