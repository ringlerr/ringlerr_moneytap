<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customborder"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:paddingTop="@dimen/spacing_medium">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="9dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_xmlarge"
                android:layout_weight="1"
                app:srcCompat="@drawable/housing" />

            <ImageButton
                android:id="@+id/bt_close"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginRight="@dimen/spacing_middle"
                android:background="@android:drawable/screen_background_light_transparent"
                android:tint="@color/grey_1000"
                app:srcCompat="@drawable/ic_close" />

        </LinearLayout>


    <TextView
        android:id="@+id/call_stat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:gravity="center"
        android:padding="@dimen/spacing_medium"
        android:text="Incoming Call From"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/grey_60"
        android:textSize="14sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:minHeight="120dp"
        android:orientation="horizontal">


        <!--<ImageView-->
        <!--android:id="@+id/image"-->
        <!--android:layout_width="90dp"-->
        <!--android:layout_height="90dp"-->
        <!--android:src="@drawable/photo_male_2" />-->

        <ImageView
            android:id="@+id/image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="@dimen/spacing_middle"
            android:src="@drawable/photo_male_2" />

        <LinearLayout
            android:layout_width="241dp"
            android:layout_height="118dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_mlarge"
                    android:text="Housing"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/grey_90"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image_verified"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/verified" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/bt_open"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/spacing_mlarge"
                    android:background="@color/grey_100"
                    android:gravity="end"
                    android:padding="@dimen/spacing_small"
                    android:text="View Profile"
                    android:textAlignment="viewEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/light_blue_400"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>


            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:text="27 Years 5'8"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_800"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:text="Customer"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_800"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="128dp"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                app:srcCompat="@drawable/star_rating_5_of_5" />

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="100dp"
            android:orientation="vertical"
            android:padding="@dimen/spacing_small">

            <!--<ImageView-->
            <!--android:id="@+id/image"-->
            <!--android:layout_width="90dp"-->
            <!--android:layout_height="90dp"-->
            <!--android:src="@drawable/photo_male_2" />-->

            <!--<TextView-->
            <!--android:id="@+id/messageView"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/spacing_middle"-->
            <!--android:layout_marginTop="@dimen/spacing_medium"-->
            <!--android:layout_marginRight="@dimen/spacing_middle"-->
            <!--android:text="Message"-->
            <!--android:textAlignment="center"-->
            <!--android:textAppearance="@style/TextAppearance.AppCompat.Subhead"-->
            <!--android:textColor="@color/grey_20" />-->

            <TextView
                android:id="@+id/caller_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:gravity="start"
                android:text="Caller's Message"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_1000"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/messageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:background="@color/grey_100"
                android:gravity="top"
                android:lines="2"
                android:padding="@dimen/spacing_middle"
                android:text=""
                android:textColor="@color/blue_grey_800"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/my_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:gravity="start"
                android:text="Your Reply"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_1000"
                android:textSize="14sp"
                android:textStyle="italic"
                android:visibility="gone" />

            <TextView
                android:id="@+id/messageViewRevert"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_medium"
                android:background="@color/grey_100"
                android:gravity="top"
                android:lines="1"
                android:padding="@dimen/spacing_middle"
                android:text=""
                android:textColor="@color/blue_grey_800"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:background="@color/grey_100"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/layout_revert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_middle"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/bt_revert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/whatsapp" />

                <TextView
                    android:id="@+id/bt_revert_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bt_revert"
                    android:layout_centerInParent="false"
                    android:layout_centerHorizontal="true"
                    android:singleLine="true"
                    android:text="Whatsapp"
                    android:textColor="@color/light_green_600"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_middle"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/nt_interested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:tint="@color/cyan_A700"
                    app:srcCompat="@drawable/ic_message_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nt_interested"
                    android:layout_centerInParent="false"
                    android:layout_centerHorizontal="true"
                    android:singleLine="true"
                    android:text="SMS"
                    android:textColor="@color/cyan_A700"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_middle"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/bt_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:tint="@color/orange_900"
                    app:srcCompat="@drawable/ic_restore_black_24dp" />

                <TextView
                    android:id="@+id/bt_send_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bt_send"
                    android:layout_centerInParent="false"
                    android:layout_centerHorizontal="true"
                    android:singleLine="true"
                    android:text="Call Back"
                    android:textColor="@color/pink_A400"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/bt_callback"
                android:layout_width="64dp"
                android:layout_height="@dimen/spacing_mxlarge"
                android:layout_weight="1"
                android:tint="@color/light_green_700"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_send_black_24dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_medium"
            android:gravity="right"
            android:text="Powered by Ringlerr"
            android:textColor="@color/light_green_700"
            android:textSize="10sp" />

</LinearLayout>

